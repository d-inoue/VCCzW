#
# The MySQL database server configuration file.
#
# You can copy this to one of:
# - "/etc/mysql/my.cnf" to set global options,
# - "~/.my.cnf" to set user-specific options.
#
# One can use all long options that the program supports.
# Run program with --help to get a list of available options and with
# --print-defaults to see which it would actually understand and use.
#
# For explanations see
# http://dev.mysql.com/doc/mysql/en/server-system-variables.html

# This will be passed to all mysql clients
# It has been reported that passwords should be enclosed with ticks/quotes
# escpecially if they contain "#" chars...
# Remember to edit /etc/mysql/debian.cnf when changing the socket location.
[client]
port            = <%= node['mariadb']['port'] %>
socket          = <%= node['mariadb']['server']['socket'] %>

# Here is entries for some specific programs
# The following values assume you have at least 32M ram

# This was formally known as [safe_mysqld]. Both versions are currently parsed.
[mysqld_safe]
socket          = <%= node['mariadb']['server']['socket'] %>
nice            = <%= node['mariadb']['nice'] %>

[mysqld]
#
# * Basic Settings
#

#
# * IMPORTANT
#   If you make changes to these settings and your system uses apparmor, you may
#   also need to also adjust /etc/apparmor.d/usr.sbin.mysqld.
#

user            = mysql
pid-file        = <%= node['mariadb']['server']['pid_file'] %>
socket          = <%= node['mariadb']['server']['socket'] %>
port            = <%= node['mariadb']['port'] %>
basedir         = <%= node['mariadb']['server']['basedir'] %>
datadir         = <%= node['mariadb']['data_dir'] %>
tmpdir          = <%= node['mariadb']['server']['tmpdir'].join(':') %>
skip-external-locking
<%- if node['mariadb']['tunable']['skip-name-resolve'] %>
skip-name-resolve
<%- end %>

# Charset and Collation
character-set-server = <%= node['mariadb']['tunable']['character-set-server'] %>
collation-server     = <%= node['mariadb']['tunable']['collation-server'] %>
<%- if node['mariadb']['tunable']['lower_case_table_names'] %>
lower_case_table_names = <%= node['mariadb']['tunable']['lower_case_table_names'] %>
<%- end %>
<%- if node['mariadb']['tunable']['event_scheduler'] %>
event_scheduler      = <%= node['mariadb']['tunable']['event_scheduler'] %>
<%- end %>
<%- if node['mariadb']['tunable']['skip-character-set-client-handshake'] %>
skip-character-set-client-handshake
<%- end %>
<%- if (node['mariadb']['tunable']['lc_messages_dir'] && node['mariadb']['tunable']['lc_messages']) %>
lc_messages_dir	    = <%= node['mariadb']['lc_messages_dir'] %>
lc_messages	    = <%= node['mariadb']['lc_messages'] %>
<%- elsif (node['mariadb']['tunable']['languages']) %>
languages	    = <%= node['mariadb']['tunable']['languages'] %>
<%- end %>

#
# Instead of skip-networking the default is now to listen only on
# localhost which is more compatible and is not less secure.
bind-address            = <%= node['mariadb']['bind_address'] %>
#
# * Fine Tuning
#
key_buffer_size         = <%= node['mariadb']['tunable']['key_buffer_size'] %>
max_allowed_packet      = <%= node['mariadb']['tunable']['max_allowed_packet'] %>
thread_stack            = <%= node['mariadb']['tunable']['thread_stack'] %>
thread_cache_size       = <%= node['mariadb']['tunable']['thread_cache_size'] %>
sort_buffer_size        = <%= node['mariadb']['tunable']['sort_buffer_size'] %>
read_buffer_size        = <%= node['mariadb']['tunable']['read_buffer_size'] %>
read_rnd_buffer_size    = <%= node['mariadb']['tunable']['read_rnd_buffer_size'] %>
join_buffer_size        = <%= node['mariadb']['tunable']['join_buffer_size'] %>

auto-increment-increment = <%= node['mariadb']['auto-increment-increment'] %>
auto-increment-offset    = <%= node['mariadb']['auto-increment-offset'] %>

# This replaces the startup script and checks MyISAM tables if needed
# the first time they are touched
myisam-recover          = <%= node['mariadb']['tunable']['myisam-recover'] %>
max_connections         = <%= node['mariadb']['tunable']['max_connections'] %>
max_connect_errors      = <%= node['mariadb']['tunable']['max_connect_errors'] %>
concurrent_insert       = <%= node['mariadb']['tunable']['concurrent_insert'] %>
connect_timeout         = <%= node['mariadb']['tunable']['connect_timeout'] %>
wait_timeout            = <%= node['mariadb']['tunable']['wait_timeout'] %>
net_read_timeout        = <%= node['mariadb']['tunable']['net_read_timeout'] %>
net_write_timeout       = <%= node['mariadb']['tunable']['net_write_timeout'] %>
back_log                = <%= node['mariadb']['tunable']['back_log'] %>
<%- if node['mariadb']['version'].to_f >= 5.6 %>
table_open_cache        = <%= node['mariadb']['tunable']['table_open_cache'] %>
<%- else %>
table_cache        = <%= node['mariadb']['tunable']['table_open_cache'] %>
<%- end %>

tmp_table_size          = <%= node['mariadb']['tunable']['tmp_table_size'] %>
max_heap_table_size     = <%= node['mariadb']['tunable']['max_heap_table_size'] %>
bulk_insert_buffer_size = <%= node['mariadb']['tunable']['bulk_insert_buffer_size'] %>
open-files-limit        = <%= node['mariadb']['tunable']['open-files-limit'] %>

# Default Table Settings
<%- if node['mariadb']['tunable']['sql_mode'] %>
sql_mode                = "<%= node['mariadb']['tunable']['sql_mode'] %>"
<%- end %>

#
# * Query Cache Configuration
#
query_cache_limit       = <%= node['mariadb']['tunable']['query_cache_limit'] %>
query_cache_size        = <%= node['mariadb']['tunable']['query_cache_size'] %>
#
# * Logging
#
# Both location gets rotated by the cronjob.
# Be aware that this log type is a performance killer.
#log            = /var/log/mysql/mysql.log
#
# Error logging goes to syslog. This is a Debian improvement :)
<%- if node['mariadb']['tunable']['log_error'] %>
log_error = <%= node['mariadb']['tunable']['log_error'] %>
<%- end %>
<%- if node['mariadb']['tunable']['log_warnings'] %>
log_warnings
<%- end %>
#
# * Replication
#


#
# Here you can see queries with especially long duration
<%- if node['mariadb']['server']['slow_query_log'] %>
slow_query_log      = 1
slow_query_log_file = <%= node['mariadb']['server']['slow_query_log_file'] %>
<%- else %>
log_slow_queries    = <%= node['mariadb']['server']['log_slow_queries'] %>
<%- end %>

long_query_time         = <%= node['mariadb']['tunable']['long_query_time'] %>
<%- if node['mariadb']['tunable']['log_queries_not_using_index'] and node['mariadb']['tunable']['slow_query_log']  %>
log-queries-not-using-indexes
<%- end %>
