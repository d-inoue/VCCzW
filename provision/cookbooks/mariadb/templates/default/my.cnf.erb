<%- if node['mariadb']['tunable']['replicate_wild_do_table'] %>
replicate_wild_do_table     = <%= node['mariadb']['tunable']['replicate_wild_do_table'] %>
<%- end %>
<%- if node['mariadb']['tunable']['replicate_wild_ignore_table'] %>
replicate_wild_ignore_table = <%= node['mariadb']['tunable']['replicate_wild_ignore_table'] %>
<%- end %>


sync_binlog             = <%= node['mariadb']['tunable']['sync_binlog'] %>
<%- if node['mariadb']['tunable']['skip_slave_start'] %>
skip_slave_start
<%- end %>
<%- if node['mariadb']['tunable']['read_only'] %>
read_only = 1
<%- end %>

<%- if node['mariadb']['tunable']['transaction-isolation'] %>
