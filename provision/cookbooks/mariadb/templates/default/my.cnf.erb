<%- end %>

<%- if node['mariadb']['tunable']['replicate_do_db'] %>
replicate_do_db             = <%= node['mariadb']['tunable']['replicate_do_db'] %>
<%- end %>
<%- if node['mariadb']['tunable']['replicate_do_table'] %>
replicate_do_table          = <%= node['mariadb']['tunable']['replicate_do_table'] %>
<%- end %>
<%- if node['mariadb']['tunable']['replicate_ignore_db'] %>
replicate_ignore_db         = <%= node['mariadb']['tunable']['replicate_ignore_db'] %>
